<UserControl
	x:Class="DevCompanion.Desktop.UnitTypes.ControlUnitToolbar"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
	xmlns:local="clr-namespace:DevCompanion.Desktop.UnitTypes"
	mc:Ignorable="d" 
	d:DesignHeight="30" d:DesignWidth="800">
	<DockPanel>
		<DockPanel DockPanel.Dock="Top" LastChildFill="True">
			<DockPanel DockPanel.Dock="Right" HorizontalAlignment="Right" LastChildFill="True">
				<Button x:Name="ControlDelete" Content="🗑️" Padding="5 3 5 3" Background="#77990000" Foreground="White" Cursor="Hand" ToolTip="Delete Unit" Click="ControlDelete_Click" />
			</DockPanel>
			<DockPanel Background="#33DDDDFF">
				<Button x:Name="CongrolDrag" DockPanel.Dock="Left" Background="Transparent" BorderThickness="0" Cursor="ScrollAll" MouseDown="CongrolDrag_MouseDown" />
			</DockPanel>
		</DockPanel>
		<DockPanel DockPanel.Dock="Top" Height="2" Margin="5" />
	</DockPanel>
</UserControl>
