<UserControl x:Class="DevCompanion.Desktop.ContentPages.PageLoading"
			xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
			xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
			xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
			xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
			xmlns:local="clr-namespace:DevCompanion.Desktop.ContentPages"
			mc:Ignorable="d" 
			d:DesignHeight="450" d:DesignWidth="800">
	<DockPanel LastChildFill="True">
		<DockPanel VerticalAlignment="Center" HorizontalAlignment="Center" Width="auto" Height="auto" Margin="100">
			<TextBlock Padding="30" Background="#990000AA" Foreground="White" FontSize="18">
				<TextBlock FontWeight="Bold">Now Loading</TextBlock>
				<TextBlock x:Name="ErrorMessage" Margin="0 0 0 0"></TextBlock>
			</TextBlock>
		</DockPanel>
	</DockPanel>
</UserControl>
