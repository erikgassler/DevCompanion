<local:BaseContentPage
	x:Class="DevCompanion.Desktop.ContentPages.PageBlueprintList"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
	xmlns:local="clr-namespace:DevCompanion.Desktop.ContentPages"
	mc:Ignorable="d" 
	d:DesignHeight="150" d:DesignWidth="800">
	<DockPanel LastChildFill="True">
		<DockPanel DockPanel.Dock="Top" HorizontalAlignment="Left" VerticalAlignment="Center">
			<TextBlock>Select a Blueprint to open or</TextBlock>
			<Button Margin="10 0 0 0" Click="Button_Click" Content="Open File Explorer" Width="180" IsEnabled="False" />
		</DockPanel>
		<StackPanel Orientation="Vertical" x:Name="ControlBlueprintList" Margin="0 20 0 0" />
	</DockPanel>
</local:BaseContentPage>
