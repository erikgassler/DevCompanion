<local:BaseContentPage
	x:Class="DevCompanion.Desktop.ContentPages.PageError"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
	xmlns:local="clr-namespace:DevCompanion.Desktop.ContentPages"
	mc:Ignorable="d" 
	d:DesignHeight="200" d:DesignWidth="800"
	>
	<DockPanel LastChildFill="True">
		<DockPanel VerticalAlignment="Center" HorizontalAlignment="Center" Width="auto" Height="auto" Margin="100">
			<TextBlock Padding="30" Background="#99AA0000" Foreground="White" FontSize="18">
				<TextBlock FontWeight="Bold">Error: </TextBlock>
				<TextBlock x:Name="ErrorMessage" Margin="10 0 0 0"></TextBlock>
			</TextBlock>
		</DockPanel>
	</DockPanel>
</local:BaseContentPage>
