<UserControl x:Class="DevCompanion.Desktop.Components.MenuItemTextInput"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:DevCompanion.Desktop.Components"
             mc:Ignorable="d" 
             d:DesignHeight="30" d:DesignWidth="500">
	<StackPanel HorizontalAlignment="Left" VerticalAlignment="Top" Orientation="Horizontal">
		<TextBox x:Name="TextValue" Width="180" MaxLength="200" MaxLines="1" />
		<Button x:Name="CancelUpdate" Content="🗙" Width="20" Background="Red" Foreground="White" />
		<Button x:Name="SaveChange" Content="✔" Background="Green" Foreground="White" />
		<Button Style="{DynamicResource MenuButtonStyleDefault}" x:Name="OpenEditor" Content="" Width="180" Background="Transparent" BorderThickness="0" HorizontalContentAlignment="Left" />
	</StackPanel>
</UserControl>
