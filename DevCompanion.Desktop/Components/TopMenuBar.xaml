<UserControl x:Class="DevCompanion.Desktop.Components.TopMenuBar"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:DevCompanion.Desktop.Components"
             mc:Ignorable="d" 
             d:DesignHeight="100" d:DesignWidth="500">
	<DockPanel>
		<Menu DockPanel.Dock="Top">
			<MenuItem Header="_File">
				<MenuItem Header="_New Blueprint" />
				<MenuItem Header="_Open Blueprint" />
				<MenuItem Header="_Save Blueprint" IsEnabled="False" />
				<MenuItem Header="_Sync Blueprint" IsEnabled="False" />
				<Separator />
				<MenuItem Header="_Exit" Click="MenuItem_ClickExit" />
			</MenuItem>
			<MenuItem Header="_Blueprints" Name="BlueprintList" Binding.SourceUpdated="MenuItem_BlueprintListUpdated"></MenuItem>
			<MenuItem Header="_Settings">
				<MenuItem Header="_Cloud" StaysOpenOnClick="True">
					<local:MenuItemTextInput x:Name="CloudStorageAPIEndpoint" DisplayText="Cloud Endpoint" />
					<local:MenuItemTextInput x:Name="CloudStorageAPILicense" DisplayText="Cloud License" />
					<MenuItem Header="_Enable Auto-Sync" Name="AutoSyncBlueprintToggle" ToolTip="Enable auto-syncing blueprints when changes are detected." IsCheckable="True" />
				</MenuItem>
			</MenuItem>
		</Menu>
	</DockPanel>
</UserControl>
