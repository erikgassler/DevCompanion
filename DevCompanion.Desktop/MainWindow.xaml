<Window x:Class="DevCompanion.Desktop.MainWindow"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	xmlns:local="clr-namespace:DevCompanion.Desktop"
	xmlns:components="clr-namespace:DevCompanion.Desktop.Components"
	mc:Ignorable="d"
	Title="Dev Companion" Height="350" Width="500"
	WindowStyle="SingleBorderWindow" Icon="/Logo_64.png"
		SizeToContent="Manual"
	>
	<DockPanel LastChildFill="True">
		<DockPanel DockPanel.Dock="Top">
			<components:TopMenuBar />
		</DockPanel>
		<DockPanel x:Name="MainContentContainer" DockPanel.Dock="Top">

		</DockPanel>
	</DockPanel>
</Window>
