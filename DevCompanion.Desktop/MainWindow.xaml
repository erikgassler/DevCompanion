<Window x:Class="DevCompanion.Desktop.MainWindow"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	xmlns:local="clr-namespace:DevCompanion.Desktop"
	xmlns:components="clr-namespace:DevCompanion.Desktop.Components"
	mc:Ignorable="d"
	Title="Dev Companion" Height="350" Width="500"
		BorderThickness="0"
		Background="Black"
		Foreground="White"
	WindowStyle="None" Icon="/Logo_64.png"
		SizeToContent="Manual"
	>
	<DockPanel LastChildFill="True">
		<DockPanel DockPanel.Dock="Top" x:Name="CustomToolbar" Cursor="Arrow">
			<components:TopMenuBar />
		</DockPanel>
		<StatusBar DockPanel.Dock="Bottom" FontSize="10">
			<StatusBar.Background>
				<SolidColorBrush Color="AliceBlue" />
			</StatusBar.Background>
			<StatusBarItem>
				<TextBlock x:Name="LatestStatusUpdate" Text="" />
			</StatusBarItem>
			<StatusBarItem HorizontalAlignment="Right">
				<ProgressBar x:Name="ProcessingProgress" Value="70" Width="100" Height="8" />
			</StatusBarItem>
		</StatusBar>
		<DockPanel x:Name="MainContentContainer" DockPanel.Dock="Top" />
	</DockPanel>
</Window>
